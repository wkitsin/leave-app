<div style="padding-top: 100px;">
  <div style="display: flex; justify-content: center;">
    <div style="position: relative; width: 45vw;">
      <div class="container">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Create new employee </h4><br>
              <%= form_for @user do |f| %>
              <table>
                <tr>
                  <td><%= f.label :email, "Email:"%></td>
                  <td><%= f.text_field :email , class: 'create-employee' %></td>
                </tr>
                <tr>
                  <td><%= f.label :title, "Title:" %></td>
                  <td><%= f.select :title , options_for_select(["None",
                    "BURO", "RR", "STAIL", "ALL"]), class: 'create-employee' %> </td>
                </tr>
                <tr>
                  <td><%= f.label :total_al, "Annual Leave:" %></td>
                  <td><%= f.number_field :total_al , step: '.5', class: 'create-employee' %> </td>
                </tr>
                <tr>
                  <td><%= f.label :bring_forward, 'Brought Forward:'%></td>
                  <td><%= f.number_field :bring_forward , step: '.5', class: 'create-employee' %></td>
                </tr>
                <tr>
                  <td><%= f.label :replacement_leave ,'Replacement Leave:'%></td>
                  <td><%= f.number_field :replacement_leave , step: '.5', class: 'create-employee' %> </td>
                </tr>
                <tr>
                  <td><%= f.label :hod_email ,'HOD Email:'%></td>
                  <td><%= f.text_field :hod_email, class: 'create-employee' %> </td>
                </tr>
                <tr>
                  <td><%= f.label :department ,'Department:'%></td>
                  <td><%= f.text_field :department, placeholder: 'Example: marketing',class: 'create-employee' %> </td>
                </tr>
                <tr>
                  <td><%= f.label :role, 'Admin Status:' %></td>
                  <td><%= f.select :role , options_for_select(["None",
                    ["Head Of Department", "admin"], ["HR", "super-admin"]]), class: 'create-employee' %></td>
                </tr>
              </table>
            <br>
            <%= f.submit 'Create' , class: 'create-btn' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
